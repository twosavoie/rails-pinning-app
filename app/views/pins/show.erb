<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>
<hr/>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
  </p>
  <img src="<%= @pin.image.url(:medium) %>">
  <%= render partial: "shared/repin_form", locals: {pin: @pin} %>
  <p class="add-margin"><strong>This pin has been pinned by:</strong></p>
    <ul class="list-group">
      <% @users.each do |user| %>
      <li class="list-group-item"><%= link_to "#{user.first_name} #{user.last_name}", user_by_name_path(user.last_name) %></li>
      <% end %>
    </ul>
</div>
<br/>
<a href="/">
  <i class="fa fa-arrow-left"></i>
  Back to Home
</a> |
 <%= link_to 'Edit Pin', edit_pin_path(@pin.id) %> |
 <%= link_to 'Delete Pin', @pin, method: :delete, data: { confirm: 'Are you sure?' } %>
